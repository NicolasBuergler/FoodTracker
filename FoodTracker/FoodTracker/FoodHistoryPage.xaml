<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodTracker.FoodHistoryPage"
             Title="FoodHistoryPage">

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="HomeBtn" Text="Home" Clicked="HomeBtn_Clicked"  HorizontalOptions="Fill" Margin="13,10,13,10"/>

        <ListView ItemsSource="{Binding FoodList}" ItemTapped="ListView_ItemTapped">
            <ListView.ItemTemplate Margin="0,5,0,0">
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding Type.Product.Name}" FontSize="Medium" FontAttributes="Bold"/>
                            <Label Text="{Binding EatingDateTime}" FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>